# ---------------------------------------------
#     i3wm config by tersone / ssl33pl3ss
# ---------------------------------------------
#          _ __________       _ _____
#  ___ ___| |___ /___ / _ __ | |___ / ___ ___
# / __/ __| | |_ \ |_ \| '_ \| | |_ \/ __/ __|
# \__ \__ \ |___) |__) | |_) | |___) \__ \__ \
# |___/___/_|____/____/| .__/|_|____/|___/___/
#                      |_|

# ---------------------------------------------
#                   Mod key
# ---------------------------------------------
set $mod Mod4

# ---------------------------------------------
#                 System font
# ---------------------------------------------
font pango:Source Code Pro Medium 10

# ---------------------------------------------
#               Window borders
# ---------------------------------------------
for_window [class="^.*"] border pixel 0
gaps inner 10
gaps outer 10
title_align center

# ---------------------------------------------
#   Terminal / Text / Menu / Browser / Files
# ---------------------------------------------
bindsym $mod+Return exec terminal
bindsym Ctrl+Mod1+t exec terminal
bindsym $mod+k exec geany
bindsym $mod+r exec j4-dmenu
bindsym $mod+Tab exec firefox
bindsym $mod+e exec thunar

# ---------------------------------------------
#                Menus
# ---------------------------------------------
bindsym Ctrl+Mod1+Delete exec powermenu
bindsym Ctrl+Mod1+n exec def-nmdmenu
bindsym Ctrl+Mod1+r exec def-dmenu
bindsym $mod+l exec lock
bindsym Mod1+e exec edit-configs
bindsym Mod1+l exec quick-links

# ---------------------------------------------
#                Kill window
# ---------------------------------------------
bindsym $mod+q kill

# ---------------------------------------------
#               Focus windows
# ---------------------------------------------
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# ---------------------------------------------
#           Move focused windows
# ---------------------------------------------
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# ---------------------------------------------
#   Split in horizontal/vertical orientation
# ---------------------------------------------
bindsym $mod+z split h
bindsym $mod+x split v

# ---------------------------------------------
#         Fullscreen focused window
# ---------------------------------------------
bindsym $mod+Mod1+Up fullscreen toggle

# ---------------------------------------------
#   Toggle tiling/floating and tiling/tabbed
# ---------------------------------------------
bindsym $mod+space floating toggle
bindsym $mod+Shift+Tab layout toggle tabbed split

# ---------------------------------------------
#               Restart/Reload config
# ---------------------------------------------
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# ---------------------------------------------
#              Audio controls
# ---------------------------------------------
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# ---------------------------------------------
#                Screenshots
# ---------------------------------------------
bindsym Print exec takeshot --now
bindsym Ctrl + Print exec takeshot --area

# ---------------------------------------------
#                Colorscheme
# ---------------------------------------------
client.background       #2b3339

# class                 border  backgr. text    indicator child_border
client.focused          #81A1C1 #81A1C1 #D8DEE9 #a7c080   #81A1C1
client.focused_inactive #61AFEF #61AFEF #2E3440 #a7c080   #61AFEF
client.unfocused        #3B4252 #3B4252 #D8DEE9 #a7c080   #3B4252
client.urgent           #BF616A #BF616A #D8DEE9 #a7c080   #BF616A
client.placeholder      #2E3440 #2E3440 #D8DEE9 #a7c080   #2E3440

# ---------------------------------------------
#           Define workspace names
# ---------------------------------------------
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"

# ---------------------------------------------
#             Switch to workspace
# ---------------------------------------------
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7

# ---------------------------------------------
#   Move focused window to another workspace
# ---------------------------------------------
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7

# ---------------------------------------------
#             Resizing windows
# ---------------------------------------------
bindsym $mod+Ctrl+Left resize shrink width 25 px
bindsym $mod+Ctrl+Right resize grow width 25 px
bindsym $mod+Ctrl+Up resize shrink height 25 px
bindsym $mod+Ctrl+Down resize grow height 25 px

# ---------------------------------------------
#               Apps assignment
# ---------------------------------------------
assign [class="Code"] 2

# ---------------------------------------------
#                  Apps rules
# ---------------------------------------------
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [class="zoom"] floating enable
for_window [class="Alafloat|Matplotlib"] floating enable
for_window [class="Onboard|Yad"] floating enable
for_window [class="feh|Viewnior|MPlayer"] floating enable

# ---------------------------------------------
#                 Autostart
# ---------------------------------------------
exec_always --no-startup-id "~/.config/i3/bin/autostart.sh"
exec_always --no-startup-id nvidia-settings --load-config-only
exec_always --no-startup-id xrandr --output DP-1 --mode 1920x1080 --rate 144.00
exec_always --no-startup-id setxkbmap us,ru -option 'grp:alt_shift_toggle'
