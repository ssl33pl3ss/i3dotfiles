# ---------------------------------------------
#     i3wm config by tersone / ssl33pl3ss
# ---------------------------------------------
#          _ __________       _ _____
#  ___ ___| |___ /___ / _ __ | |___ / ___ ___
# / __/ __| | |_ \ |_ \| '_ \| | |_ \/ __/ __|
# \__ \__ \ |___) |__) | |_) | |___) \__ \__ \
# |___/___/_|____/____/| .__/|_|____/|___/___/
#                      |_|

# ---------------------------------------------
#                   Mod key
# ---------------------------------------------
set $mod Mod4

# ---------------------------------------------
#                 System font
# ---------------------------------------------
font pango:System San Francisco Display 9

# ---------------------------------------------
#               Window borders
# ---------------------------------------------
for_window [class="^.*"] border pixel 0
gaps inner 10
gaps outer 10

# ---------------------------------------------
#   Terminal / Text / Menu / Browser / Files
# ---------------------------------------------
bindsym $mod+Return exec konsole
bindsym Ctrl+Mod1+t exec konsole
bindsym $mod+k exec kate
bindsym $mod+r exec ~/.config/polybar/docky/scripts/launcher.sh
bindsym $mod+Tab exec firefox
bindsym $mod+e exec dolphin

# ---------------------------------------------
#            Custom menus and files
# ---------------------------------------------
bindsym $mod+l exec --no-startup-id scrlock.sh
bindsym Ctrl+Mod1+Delete exec ~/.config/polybar/docky/scripts/powermenu.sh
bindsym Ctrl+Mod1+o exec ~/.config/polybar/docky/scripts/configmenu.sh
bindsym Ctrl+Mod1+h exec konsole -e micro ~/hw
bindsym Ctrl+Mod1+g exec nomacs ~/Pictures/random/raspisanie.jpg

# ---------------------------------------------
#                Kill window
# ---------------------------------------------
bindsym $mod+q kill

# ---------------------------------------------
#               Focus windows
# ---------------------------------------------
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# ---------------------------------------------
#           Move focused windows
# ---------------------------------------------
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# ---------------------------------------------
#             Resizing windows
# ---------------------------------------------
bindsym $mod+Ctrl+Left resize shrink width 25 px
bindsym $mod+Ctrl+Right resize grow width 25 px
bindsym $mod+Ctrl+Up resize shrink height 25 px
bindsym $mod+Ctrl+Down resize grow height 25 px

# ---------------------------------------------
#   Split in horizontal/vertical orientation
# ---------------------------------------------
bindsym $mod+z split h
bindsym $mod+x split v

# ---------------------------------------------
#         Fullscreen focused window
# ---------------------------------------------
bindsym $mod+Mod1+Up fullscreen toggle

# ---------------------------------------------
#   Toggle tiling/floating and tiling/tabbed
# ---------------------------------------------
bindsym $mod+space floating toggle
bindsym $mod+Shift+Tab layout toggle tabbed split

# ---------------------------------------------
#       Reload/Restart i3 for updating config
# ---------------------------------------------
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# ---------------------------------------------
#              Audio controls
# ---------------------------------------------
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# ---------------------------------------------
#           Define workspace names
# ---------------------------------------------
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# ---------------------------------------------
#             Switch to workspace
# ---------------------------------------------
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# ---------------------------------------------
#   Move focused window to another workspace
# ---------------------------------------------
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# ---------------------------------------------
#   		Assign app to workspace
# ---------------------------------------------

assign [class="Code"] $ws2
assign [class="Blender"] $ws2
assign [class="discord"] $ws3
assign [class="Figma"] $ws3

# ---------------------------------------------
#              Plasma integraion
# ---------------------------------------------
for_window [title="Рабочий стол по умолчанию — Plasma"] kill, floating enable, border none
for_window [class="plasmashell"] kill, floating enable
for_window [class="Plasma"] floating enable, border none
for_window [title="plasma-desktop"] floating enable, border none
for_window [title="win7"] floating enable, border none
for_window [class="krunner"] floating enable, border none
for_window [class="Kmix"] floating enable, border none
for_window [class="Klipper"] floating enable, border none
for_window [class="Plasmoidviewer"] floating enable, border none
for_window [class="(?i)*nextcloud*"] floating disable
for_window [class="plasmashell" window_type="notification"] floating enable, border none, move right 700px, move down 450px
no_focus [class="plasmashell" window_type="notification"]

# ---------------------------------------------
#                 Autostart
# ---------------------------------------------
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
exec_always --no-startup-id nvidia-settings --load-config-only
exec_always --no-startup-id ~/.fehbg;
#exec_always --no-startup-id nitrogen --restore
exec_always --no-startup-id ~/.config/polybar/launch.sh --docky
exec_always --no-startup-id xrandr --output DP-1 --mode 1920x1080 --rate 144.00
exec_always --no-startup-id setxkbmap us,ru -option 'grp:alt_shift_toggle'
exec_always --no-startup-id picom --experimental-backends
